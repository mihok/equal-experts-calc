{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "amd",
        "target": "es2020",

        "strict": true,
        "esModuleInterop": true,

        "sourceMap": true,

        "outDir": "dist",
        "baseUrl": ".",
        "lib": [
          "DOM",
          "ES2021"
        ],
        "declaration": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}
